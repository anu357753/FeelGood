<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/feeling_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="How are you feeling?"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/excited"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/excited"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feeling_query"
        android:onClick="excited"/>

    <ImageView
        android:id="@+id/happy"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:onClick="happy"
        android:src="@drawable/happy"
        app:layout_constraintLeft_toRightOf="@id/excited"
        app:layout_constraintTop_toBottomOf="@+id/feeling_query" />

    <ImageView
        android:id="@+id/dont_know"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/dont_know"
        app:layout_constraintLeft_toRightOf="@id/happy"
        app:layout_constraintTop_toBottomOf="@+id/feeling_query" />

    <ImageView
        android:id="@+id/sad"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/sad"
        app:layout_constraintLeft_toRightOf="@id/dont_know"
        app:layout_constraintTop_toBottomOf="@+id/feeling_query" />

    <ImageView
        android:id="@+id/very_sad"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/very_sad"
        app:layout_constraintLeft_toRightOf="@id/sad"
        app:layout_constraintTop_toBottomOf="@+id/feeling_query" />

    <ImageView
        android:id="@+id/very_angry"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/very_angry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/very_sad"
        app:layout_constraintTop_toBottomOf="@+id/feeling_query" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_facts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/excited">

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>